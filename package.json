{
  "name": "restaurant-menu-automation-mvp",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "bun run --bun astro dev",
    "build:client": "bun run --bun astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint 'src/**/*.{js,ts,tsx,astro}'",
    "worker": "wrangler dev",
    "dev": "concurrently \"bun run client\" \"bun run worker\"",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "better-auth:generate": "bun x @better-auth/cli@latest generate --output ./src/server/database/schemas/auth.schema.ts",
    "dryrun:staging": "bun run build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "bun run build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "bun run build:client && wrangler deploy --env staging",
    "deploy:prod": "bun run build:client && wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply mvp_local_db --local",
    "db:migrate:staging": "wrangler d1 migrations apply restaurant_menu_automation_mvp_staging_db --remote --env staging"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.53.1",
    "astro": "^5.16.11",
    "better-auth": "^1.4.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "eslint-plugin-astro": "^1.5.0",
    "hono": "^4.11.4",
    "lucide-react": "^0.562.0",
    "prettier": "^3.8.0",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.59.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260120.0",
    "drizzle-kit": "^0.31.8",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tw-animate-css": "^1.4.0"
  }
}
