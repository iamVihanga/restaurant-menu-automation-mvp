{
  "name": "restaurant-menu-automation-mvp",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "bun run --bun astro dev",
    "build": "bun run --bun astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
